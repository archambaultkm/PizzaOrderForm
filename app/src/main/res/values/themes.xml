<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PizzaOrderForm" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/flame</item>
        <item name="colorPrimaryVariant">@color/cocoa_brown</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/powder_blue</item>
        <item name="colorSecondaryVariant">@color/slate_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>


        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/slate_grey</item>
        <item name="android:fontFamily">@font/app_default</item>

        <Button>
            <item name="android:stateListAnimator">@null</item>
            <item name="android:elevation">10dp</item>
        </Button>

    </style>
</resources>