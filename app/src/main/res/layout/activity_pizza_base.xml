<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".PizzaBaseActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?actionBarSize"
        android:theme="?actionBarTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:text="@string/pizzaBaseTitle"
            android:textColor="@color/slate_grey"
            android:textSize="35sp"
            android:textStyle="bold">

        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="bottom"
        android:text="@string/size"
        android:textColor="@color/slate_grey"
        android:textSize="24sp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/alternate_button"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="@string/size1"
            android:textColor="@color/slate_grey"
            app:backgroundTint="@null">

        </Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/alternate_button"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="@string/size2"
            android:textColor="@color/slate_grey"
            app:backgroundTint="@null">

        </Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/alternate_button"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="@string/size3"
            android:textColor="@color/slate_grey"
            app:backgroundTint="@null">

        </Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/alternate_button"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="@string/size4"
            android:textColor="@color/slate_grey"
            app:backgroundTint="@null">

        </Button>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="bottom"
        android:text="@string/txtCrust"
        android:textColor="@color/slate_grey"
        android:textSize="24sp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/alternate_button"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/txtCrust1"
            android:textColor="@color/slate_grey"
            app:backgroundTint="@null">

        </Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/alternate_button"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/txtCrust2"
            android:textColor="@color/slate_grey"
            app:backgroundTint="@null">

        </Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/alternate_button"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/txtCrust3"
            android:textColor="@color/slate_grey"
            app:backgroundTint="@null">

        </Button>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="bottom"
        android:text="@string/txtCheese"
        android:textColor="@color/slate_grey"
        android:textSize="24sp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/alternate_button"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/txtCheese1"
            android:textColor="@color/slate_grey"
            app:backgroundTint="@null">

        </Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/alternate_button"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/txtCheese2"
            android:textColor="@color/slate_grey"
            app:backgroundTint="@null">

        </Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/alternate_button"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/txtCheese3"
            android:textColor="@color/slate_grey"
            app:backgroundTint="@null">

        </Button>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:insetTop="10dp"
        android:insetBottom="10dp"
        android:text="@string/toppingSelection"
        app:cornerRadius="50dp">

    </Button>

</LinearLayout>